                        "description": "异步查询单次返回条数",
                        "type": "integer",
                        "default": 1000
                      },
                      "AsyncQuery": {
                        "description": "异步查询标识",
                        "type": "string"
                      },
                      "CallbackID": {
                        "description": "查询回调服务资源标识符",
                        "type": "string"
                      },
                      "CodeMode": {
                        "description": "信息代码输出模式",
                        "type": "string",
                        "enum": ["0","1","2"],
                        "x-apifox": {
                          "enumDescriptions": {
                            "0": "代码",
                            "1": "名称",
                            "2": "代码和名称"
                          }
                        }
                      },
                      "SortResults": {
                        "description": "结果排序数据项集",
                        "type": "string"
                      }
                    }
