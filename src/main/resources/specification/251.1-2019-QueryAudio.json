          {
            "$ref": "254-2021.json#/components/schemas/JSONCommonResponse254"
          },
          {
            "type": "object",
            "properties": {
              "ResponseParam": {
                "type": "object",
                "properties": {
                  "Content": {
                    "description": "文件内容以Base64格式返回",
                    "type": "string"
                  },
                  "Filename": {
                    "description": "通过文件名在传输通道获取文件",
                    "type": "string"
                  }
                }
              }
            }
          }
        ]
      },
      "JSONQueryMultiMediaRequest": {
        "description": "多媒体检索查询服务请求",
        "allOf": [
          {
            "$ref": "254-2021.json#/components/schemas/JSONCommonRequest254"
          },
          {
            "type": "object",
            "properties": {
              "RequestParam": {
                "type": "object",
                "properties": {
                  "SearchCondition": {
                    "type": "object",
                    "description": "查询条件信息",
                    "properties": {
                      "Content": {
                        "type": "string",
                        "description": "文件内容"
                      },
                      "Keywords": {
                        "type": "string",
                        "description": "关键词"
                      },
                      "Similarity": {
                        "type": "string",
                        "description": "查询结果的最低相似值，取值0-1。",
                        "enum": [0,1]
                      },
                      "TopNum": {
                        "type": "string",
                        "description": "返回查询结果的最大数量，上限为50"
                      },
                      "StartTime": {
                        "type": "string",
                        "description": "开始时间,格式：YYYYMMDDhh24miss"
                      },
                      "EndTime": {
                        "type": "string",
                        "description": "结束时间,格式：YYYYMMDDhh24miss"
                      }
                    },
                    "required": [
                      "TopNum"
                    ]
                  },
                  "JSONResourceInfos": {
                    "type": "array",
                    "description": "查询要求返回信息",
                    "items": {
                      "type": "object",
                      "properties": {
                        "DataItems": {
                          "type": "array",
                          "description": "数据项信息的数组",
                          "items": {
                            "type": "object",
                            "description": "数据项具体对象",
                            "properties": {
                              "Name": {
                                "type": "string",
                                "description": "数据项的名称"
                              },
                              "Fmt": {
                                "type": "string",
                                "description": "数据项的格式"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "required": [
                  "SearchCondition"
                ]
              }
            }
          }
        ]
      },
      "JSONQueryCallbackRequest": {
        "description": "音频检索查询服务请求",
        "allOf": [
          {
            "$ref": "254-2021.json#/components/schemas/JSONCommonRequest254"
          },
          {
            "type": "object",
            "properties": {
              "RequestParam": {
                "type": "object",
                "properties": {
                  "ResourceInfos": {
                    "$ref": "#components/schemas/JSONResourceInfos",
                    "description": "当全文检索时数据项中必须包含“命中位置”，表示格式：{\"数据项\":{\"关键字\":[[\"命中位置\",\"偏移量\"]]}}"
                  },
                  "AsyncQuery": {
                    "type": "string",
                    "description": "异步查询标识"
                  }
                },
                "required": [
                  "ResourceInfos",
                  "AsyncQuery"
                ]
              }
            }
          }
        ]
