                  "JSONResourceInfos": {
                    "type": "array",
                    "description": "查询要求返回信息",
                    "items": {
                      "type": "object",
                      "properties": {
                        "DataItems": {
                          "type": "array",
                          "description": "数据项信息的数组",
                          "items": {
                            "type": "object",
                            "description": "数据项具体对象",
                            "properties": {
                              "Name": {
                                "type": "string",
                                "description": "数据项的名称"
                              },
                              "Fmt": {
                                "type": "string",
                                "description": "数据项的格式"
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "ReturnDataItems": {
                    "type": "string",
                    "nullable": false,
                    "description": "是否返回数据资源数据项信息",
