          {
            "$ref": "254-2021.json#/components/schemas/JSONCommonRequest254"
          },
          {
            "type": "object",
            "properties": {
              "RequestParam": {
                "type": "object",
                "properties": {
                  "Condition": {
                    "type": "string",
                    "description": "查询条件信息",
                    "nullable": false
                  },
                  "OtherCondition": {
                    "type": "object",
                    "description": "扩展的查询条件信息",
                    "properties": {
                      "MaxReturnNum": {
                        "description": "最多总返回条数",
                        "type": "integer",
                        "default": 1000
                      },
                      "AsyncBoolean": {
                        "description": "异步查询_判断标识",
                        "type": "string",
                        "nullable": false,
