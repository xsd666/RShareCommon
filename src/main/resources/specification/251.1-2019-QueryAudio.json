          "type": "object",
          "properties": {
            "ResourceName": {
              "description": "数据资源标识符",
              "type": "string",
              "nullable": false
            },
            "ResourceItems": {
              "description": "数据资源信息",
              "type": "string",
              "nullable": false
            },
            "DataItems": {
              "description": "数据资源数据项数组",
              "type": "array",
              "items": {
                "type": "object",
                "description": "数据资源数据项信息",
                "minItems": 1,
                "properties": {
                  "Name": {
                    "type": "string"
                  },
                  "Fmt": {
                    "type": "string"
                  }
                }
              }
            },
            "DataInfo": {
              "description": "响应信息的数据集合，二维数组",
              "type": "array",
              "minItems": 1,
              "items": {
                "description": "响应数据记录，一维数组",
                "type": "array",
                "minItems": 1,
                "items": {
                  "description": "响应数据字段值",
                  "type": "object",
                  "nullable": false
                }
              }
            }
          },
          "required": [
            "ResourceName",
            "ResourceItems"
          ]
        }
      },
