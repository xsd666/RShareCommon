      "XMLQueryFormat": {
        "description": "数据资源情况查询服务请求",
        "allOf": [
          {
            "$ref": "254-2021.json#/components/schemas/XMLCommonFormat254"
          },
          {
          }
        ]
      },
      "CONDITION": {
        "type": "object",
        "properties": {
          "rel": {
            "type": "string",
            "xml": {
              "attribute": true
            },
            "enum": [
              "OR",
              "AND",
              "BTW",
              "PBR",
              "EBR",
              "BBR",
              "GT",
              "LT",
              "GE",
              "LE",
              "STC",
              "NOT",
              "IN",
              "NULL"
            ],
            "x-apifox": {
              "enumDescriptions": {
                "OR": "或",
                "AND": "和",
                "BTW": "范围取值",
                "PBR": "前模糊",
                "EBR": "后模糊",
                "BBR": "前后模糊",
                "GT": "大于",
                "LT": "小于",
                "GE": "大于等于",
                "LE": "小于等于",
                "STC": "原样返回",
                "NOT": "非",
                "IN": "与列表中任意一个值相等",
                "NULL": "空值"
              }
            }
          }
        }
      },
      "DataSet": {
        "$ref": "254-2021.json#/components/schemas/DataSet"
      },
      "Data": {
        "$ref": "254-2021.json#/components/schemas/Data"
      },
      "Item": {
        "$ref": "254-2021.json#/components/schemas/Item"
      }
    }
