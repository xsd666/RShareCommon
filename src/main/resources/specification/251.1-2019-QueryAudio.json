                    "x-apifox": {
                      "enumDescriptions": {
                        "0": "不返回数据项信息",
                        "1": "返回数据项信息"
                      }
                    }
                  }
                },
                "required": [
                  "Condition",
                  "ReturnDataItems"
                ]
              }
            }
          }
        ]
      },
      "JSONQueryDataResourceResponse": {
